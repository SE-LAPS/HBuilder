rules_version = '2';

// Firebase Storage Security Rules for Washtron App
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile Pictures - New format with timestamp
    // Format: profile_pictures/{userId}_{timestamp}.jpg
    match /profile_pictures/{allPaths=**} {
      // Anyone can read profile pictures (for display in app)
      allow read: if true;
      
      // Only authenticated users can upload their own profile picture
      allow write: if request.auth != null 
                   && request.resource.size < 2 * 1024 * 1024  // Max 2MB
                   && request.resource.contentType.matches('image/.*');  // Only images
      
      // Only the owner can delete their profile picture
      allow delete: if request.auth != null;
    }
    
    // Service Center Images (if needed in future)
    match /service_centers/{centerId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;  // Only authenticated users
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
